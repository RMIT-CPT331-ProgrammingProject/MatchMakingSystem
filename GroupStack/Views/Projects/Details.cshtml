        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Cohort)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Cohort.CohortName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Mentor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Mentor.Email)
